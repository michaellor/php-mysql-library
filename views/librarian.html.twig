<!DOCTYPE html>
<html>
    {% include 'header.html' %}

    <body>
        <h1>Welcome, Librarian</h1>

        <div class="container new_author">
            <h3>New Author</h3>
            <form  action="/add_author" method="post">
                <label for= "author_last"> Last Name:</label>
                <input name="author_last" type="text">
                <label for= "author_first">First Name:</label>
                <input name="author_first" type="text">

                <button type="submit" class="btn btn-info">Add New Author</button>

            </form>
        </div>
        <div class="container new_book">
            <h3>New Title</h3>
            <form  action="/add_book" method="post">
                <label for="title">New Title:</label>
                <input name="title" type="text">

                {% if all_authors is not empty %}
                <h4>Select an Author</h2>
                    <select name="exist_author" class="form-control">
                        <option value=null selected>AUTHOR IS NOT LISTED</option>
                        {% for author in all_authors %}
                            <option value='{{ author.getId()}}'> {{author.getLastName()}}, {{author.getFirstName}}</option>
                        {% endfor %}
                    </select>
                {% endif %}
                <button type="submit" class="btn btn-info">Add Book</button>

            </form>

            <p> * Additional Authors Can be Added Later</p>
        </div>

        <div class="container search">

        </div>

        <div class="container circulation">

        </div>
    </body>
</html>
